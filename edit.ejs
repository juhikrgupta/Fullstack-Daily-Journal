<%- include("partials/header") %>

<div class="container">
  <div class="edit-card">
    <h1 class="edit-title">✏️ Edit Your Post</h1>

    <form action="/edit/<%= post._id %>" method="POST" class="edit-form">
      <label for="title">Title</label>
      <input
        type="text"
        name="postTitle"
        id="title"
        value="<%= post.title %>"
        required
        class="edit-input"
      />

      <label for="content">Content</label>
      <textarea
        name="postBody"
        id="content"
        rows="8"
        required
        class="edit-input"
      ><%= post.content %></textarea>

      <button type="submit" class="update-btn">💾 Save Changes</button>
    </form>
  </div>
</div>

<%- include("partials/footer") %>
